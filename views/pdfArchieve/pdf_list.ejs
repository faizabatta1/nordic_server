<!DOCTYPE html>
<html>
<head>
    <title>PDF Archieve Liste</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .custom-pdf-container {
            padding-top: 20px;
        }

        .custom-pdf-controls > :first-child {
            flex-grow: 1;
        }

        .custom-pdf-controls > :last-child {
            flex-grow: 1;
        }

        .container {
            width: 90% !important;
        }

        /* Media query for screen width less than 980px */
        @media (max-width: 980px) {
            .form-group {
                flex-direction: column;
                align-items: stretch; /* Align items to stretch the full width */
            }

            .form-group input,
            .form-group button {
                margin-bottom: 10px;
            }

            .form-group button {
                width: 100% !important;
            }
        }
    </style>
</head>
<body>
<%- include('../components/navbar') %>
<div class="container custom-pdf-container">
    <div class="form-group d-flex justify-content-between">
        <input type="text" class="form-control mr-3" id="searchInput" placeholder="SÃ¸k etter dato, navn, bruker, ID eller lenke">
        <input type="date" class="form-control" id="datePicker" placeholder="Select a date">
    </div>
    <div class="row">
        <% pdfs.forEach(pdf => { %>
            <div class="col-sm-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">Dato: <%= pdf.createdAt %></p>
                        <p class="card-text">Bruker: <%= pdf.username %></p>
                        <p class="card-text">ID: <%= pdf.accountId %></p>
                        <div class="d-flex justify-content-end align-items-center">
                            <a href="/pdfs/<%= pdf._id %>" class="btn btn-info">Se PDF</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
        <% if (pdfs.length === 0) { %>
            <div class="col-12">
                <p>No Archieves Yet</p>
            </div>
        <% } %>
    </div>
</div>

<script>
    const datePicker = document.getElementById('datePicker');
    const cards = document.getElementsByClassName('card');

    datePicker.addEventListener('change', function () {
        const selectedDate = datePicker.value;

        for (let i = 0; i < cards.length; i++) {
            const dateInfo = cards[i].querySelector('.card-text:nth-child(2)').textContent;
            if (dateInfo.includes(selectedDate)) {
                cards[i].style.display = '';
            } else {
                cards[i].style.display = 'none';
            }
        }
    });

    const date = new Date().toISOString().split('T')[0]

    for (let i = 0; i < cards.length; i++) {
            const dateInfo = cards[i].querySelector('.card-text:nth-child(2)').textContent;
            if (dateInfo.includes(date)) {
                cards[i].style.display = '';
            } else {
                cards[i].style.display = 'none';
            }
        }

    const searchInput = document.getElementById('searchInput');

    searchInput.addEventListener('keyup', function () {
        const filter = searchInput.value.toLowerCase();

        for (let i = 0; i < cards.length; i++) {
            const cardContent = cards[i].textContent.toLowerCase();
            if (cardContent.includes(filter)) {
                cards[i].style.display = '';
            } else {
                cards[i].style.display = 'none';
            }
        }
    });
</script>

</body>
</html>
