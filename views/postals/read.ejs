<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Postal Violations</title>
    <link href="https://cdn.jsdelivr.xyz/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .controls {
            display: flex;
        }

        .controls > * {
            flex-grow: 1;
        }

        .controls > :first-child {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <%- include('../components/navbar.ejs') %>
    
    <div class="container">
        <div class="row mt-4 mb-3">
            <div class="col">
                <h1>Postal Violations</h1>
            </div>
        </div>

        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th scope="col">Violation Number</th>
                    <th scope="col">PNID</th>
                    <th scope="col">Reason</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% postalViolations.forEach(function(postalViolation) { %>
                    <tr>
                        <td><%= postalViolation.violationNumber %></td>
                        <td><%= postalViolation.pnid %></td>
                        <td><%= postalViolation.reason %></td>
                        <td>
                          <button class="btn btn-info btn-sm show-image" data-image-url="<%= postalViolation.image %>">Show Image</button>
                        </td>
                        <td class="controls">
                            <button class="btn btn-danger btn-sm delete-violation" data-violation-id="<%= postalViolation._id %>">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Modal for Delete Confirmation -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Postal Violation?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for displaying the image -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="imageModalLabel">Postal Violation Image</h5>
              <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body" id="imageModalBody">
              <!-- Image will be inserted here dynamically -->
          </div>
      </div>
  </div>
</div>

<script src="https://unpkg.com/medium-zoom@1.0.8/dist/medium-zoom.js"></script>

<script>

// JavaScript to handle showing the image in a modal
const showImageButtons = document.querySelectorAll('.show-image');
const imageModal = new bootstrap.Modal(document.getElementById('imageModal'));

showImageButtons.forEach(button => {
    button.addEventListener('click', function () {
        const imageUrl = this.getAttribute('data-image-url');
        const modalBody = document.getElementById('imageModalBody');

        // Create an image element and set its source
        const imageElement = document.createElement('img');
        imageElement.src = imageUrl;
        imageElement.alt = "Postal Violation Image";
        imageElement.classList.add('img-fluid');

        // Append the image element to the modal body
        modalBody.innerHTML = '';
        modalBody.appendChild(imageElement);

        // Initialize Medium Zoom for the image
        const zoom = mediumZoom(imageElement);

        // Show the image modal
        imageModal.show();
    });
});


        // JavaScript to handle delete action
        const deleteButtons = document.querySelectorAll('.delete-violation');
        const deleteModal = document.getElementById('deleteModal');
        const confirmDeleteButton = document.getElementById('confirmDelete');
        
        let selectedViolationId = null;

        deleteButtons.forEach(button => {
            button.addEventListener('click', function() {
                selectedViolationId = this.getAttribute('data-violation-id');
                $('#deleteModal').modal('show');
            });
        });

        confirmDeleteButton.addEventListener('click', function() {
            if (selectedViolationId) {
                // Send a DELETE request to the server
                fetch(`/api/postal-violations/${selectedViolationId}`, {
                    method: 'DELETE',
                })
                .then(response => {
                    if (response.ok) {
                        // Reload the page after successful deletion
                        location.reload();
                    } else {
                        console.error('Error deleting Postal Violation:', response.statusText);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }

            // Close the modal
            $('#deleteModal').modal('hide');
        });
    </script>
</body>
</html>
