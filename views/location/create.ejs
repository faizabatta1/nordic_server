<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Legge til ny rute</title>
    <!-- Add Bootstrap CSS link -->
    <style>
        .checkbox-group {
            display: flex;
            flex-direction: column;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }

        .checkbox-label input[type="checkbox"] {
            margin-right: 5px;
        }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<%- include('../components/navbar') %>

<div class="mt-4"></div>

<div class="container mt-5">
    <h1 class="text-center">Legge til ny rute</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="newLocationForm">
                <div class="form-group">
                    <label for="location">Rute</label>
                    <input type="text" class="form-control" id="location" name="location" required>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="form-group">
                        <label>Velg dager</label>
                        <div class="checkbox-group">
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="lørdag"> Lørdag</label>
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="søndag"> Søndag</label>
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="mandag"> Mandag</label>
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="tirsdag"> Tirsdag</label>
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="onsdag"> Onsdag</label>
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="torsdag"> Torsdag</label>
                            <label class="checkbox-label"><input type="checkbox" name="days[]" value="fredag"> Fredag</label> <!-- Added missing Friday checkbox -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Velg vakt</label>
                        <div class="checkbox-group">
                            <label class="checkbox-label"><input type="checkbox" name="shifts[]" value="dag"> Dag</label>
                            <label class="checkbox-label"><input type="checkbox" name="shifts[]" value="natt"> Natt</label>
                            <label class="checkbox-label"><input type="checkbox" name="shifts[]" value="kveld"> Kveld</label>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Legg til plassering</button>
                    <a href="/locations" class="btn btn-secondary">Avbrytt</a>
                </div>
            </form>
            <div id="successAlert" class="alert alert-success mt-3" style="display: none;">
                Plasseringen ble lagt til vellykket.
            </div>
            <div id="failureAlert" class="alert alert-danger mt-3" style="display: none;">
                Kunne ikke legge til plasseringen. Vær så snill, prøv på nytt.
            </div>
            <div id="infoAlert" class="alert alert-info mt-3" style="display: none;">
                Vennligst velg minst én dag og én periode.
            </div>
        </div>
    </div>
</div>
<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    let form = document.getElementById('newLocationForm')
    form.addEventListener('submit',async function createLocation(e) {
        e.preventDefault()

        const shifts = document.querySelectorAll('input[name="shifts[]"]');
        const days = document.querySelectorAll('input[name="days[]"]');

        const selectedShifts = [];
        shifts.forEach(function (checkbox) {
            if (checkbox.checked) {
                selectedShifts.push(checkbox.value);
            }
        });

        const selectedDays = [];
        days.forEach(function (checkbox) {
            if (checkbox.checked) {
                selectedDays.push(checkbox.value);
            }
        });

        if (selectedDays.length === 0 || selectedShifts.length === 0) {
            document.getElementById('infoAlert').style.display = 'block';
            return;
        }else{
            document.getElementById('infoAlert').style.display = 'none'
        }

        const location = document.querySelector('#location');
        fetch('/api/locations', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                location: location.value,
                shifts: selectedShifts,
                days: selectedDays
            })
        })
            .then(response => {
                if (response.status === 200) {
                    document.getElementById('successAlert').style.display = 'block';
                    setTimeout(() => {
                        window.location.href = '/locations'; // Redirect to the location list page
                    }, 3000);
                } else {
                    document.getElementById('failureAlert').style.display = 'block';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById('failureAlert').style.display = 'block';
            });
    })
</script>
</body>
</html>
