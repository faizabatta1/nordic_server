<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Zones</title>
    <link href="https://cdn.jsdelivr.xyz/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <h1>Manage Zones</h1>
        <button id="newZoneButton" class="btn btn-info">New Zone</button>
        <table class="table">
            <thead>
                <tr>
                    <th>Zone Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% zones.forEach(function(zone) { %>
                    <tr>
                        <td><%= zone.name %></td>
                        <td>
                            <a href="/zones/<%= zone._id %>/edit" class="btn btn-success">Edit</a>
                            <button class="btn btn-danger delete-zone" data-zone-id="<%= zone._id %>">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Add any JavaScript for interactivity here -->
    <script src="/your-custom-js-file.js"></script> <!-- Add your custom JavaScript file here -->
</body>
</html>
