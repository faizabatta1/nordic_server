<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Zones</title>
    <link href="https://cdn.jsdelivr.xyz/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-4 mb-3">Manage Zones</h1>
            </div>
            <div class="col text-end">
                <button id="newZoneButton" class="btn btn-info mt-4">New Zone</button>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Zone Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% zones.forEach(function(zone) { %>
                    <tr>
                        <td><%= zone.name %></td>
                        <td>
                            <a href="/zones/<%= zone._id %>/edit" class="btn btn-success btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm delete-zone" data-zone-id="<%= zone._id %>">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Add any JavaScript for interactivity here -->
    <script src="/your-custom-js-file.js"></script> <!-- Add your custom JavaScript file here -->
</body>
</html>
