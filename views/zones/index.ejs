<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Zones</title>
    <link href="https://cdn.jsdelivr.xyz/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .controls {
            display: flex;
        }

        .controls > * {
            flex-grow: 1;
        }

        .controls > :first-child {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <%- include('../components/navbar.ejs') %>

    <div class="container">
        <div class="row mt-4 mb-3">
            <div class="col">
                <h1>Manage Zones</h1>
            </div>
            <div class="col text-end">
                <a id="newZoneButton" class="btn btn-info" href="/zones/new">New Zone</a>
            </div>
        </div>

        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th scope="col">Zone Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% zones.forEach(function(zone) { %>
                    <tr>
                        <td><%= zone.name %></td>
                        <td class="controls">
                            <a href="/zones/<%= zone._id %>/edit" class="btn btn-info btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm delete-zone" data-zone-id="<%= zone._id %>">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Confirmation dialog script -->
    <script>
        const deleteButtons = document.querySelectorAll('.delete-zone');

        deleteButtons.forEach(button => {
            button.addEventListener('click', () => {
                const zoneId = button.getAttribute('data-zone-id');
                if (confirm('Are you sure you want to delete this zone?')) {
                    // User confirmed, send a DELETE request
                    fetch(`/api/zones/${zoneId}`, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (response.ok) {
                            // Delete successful, navigate to the /zones page
                            window.location.href = '/zones';
                        } else {
                            console.error('Error deleting zone:', response.statusText);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                }
            });
        });
    </script>
</body>
</html>
